<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="defaultThme" parent="AppTheme">
        <item name="buttonStyle">@style/defaultButton</item>
    </style>


    <style name="defaultTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="defaultButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/mt_selecter_login_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAppearance">@style/defaultTextAppearance</item>
    </style>

    <style name="defaultImageView" parent="Widget.AppCompat.ImageButton">

    </style>

</resources>
